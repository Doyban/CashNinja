<?xml version='1.0' encoding='utf-8'?>
<widget id="com.doyban.cashninja" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CashNinja</name>
    <description>Let's go and get some cash from the sky in CashNinja!</description>
    <author email="contact@doyban.com" href="https://doyban.com/">Doyban</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-purchase" spec="^9.0.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="^3.1.0" />
    <plugin name="cordova-plugin-admob-simple" spec="^3.3.8" />
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.6.2" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.2" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.3">
      <preference name="StatusBarOverlaysWebView" value="false" />
      <preference name="StatusBarBackgroundColor" value="#000000" />
      <preference name="StatusBarStyle" value="blackopaque" />
    </plugin>
    <plugin name="cordova-plugin-facebook4" spec="^5.0.0">
    <params>
      <param name="APP_ID" value="1123160237829132" />
      <param name="APP_NAME" value="CashNinja" />
    </params>
  </plugin>
</widget>
